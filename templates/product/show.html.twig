{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
        <h3>Product</h3>

        <table class="table table-striped">
        {% if is_granted('ROLE_ADMIN') %}

             <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
        {% endif %}
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>

            <tr>
                <th>Category</th>
                <td>{{ product.category.name }}</td>
            </tr>

            <tr>
                <th>Brochure</th>
                <td>{{ product.brochure }}</td>
            </tr>

            <tr>
                <th>Price Range</th>
                <td>{{ product.price.range }}</td>
            </tr>
        </table>
        <br>
    <h3>Reviews</h3>
    <a href="{{ path('review_new') }}">write review</a>

    <table class="table table-striped">
        <tr>
            <th>User</th>
            <th>Description</th>
            <th>Rating</th>
            <th>Price Paid</th>
            <th>Actions</th>

        </tr>
        {% for review in product.reviews %}
            <tr>
                <td>{{ review.username }}</td>
                <td>{{ review.description }}</td>
                <td>
                    {% if review.rating == 0.5 %}
                        <span class="fa fa-star-half checked"></span>
                    {% endif %}
                    {% if review.rating >=1 %}
                        <span class="fa fa-star checked"></span>
                    {% endif %}
                    {% if review.rating == 1.5 %}
                        <span class="fa fa-star-half checked"></span>
                    {% endif %}
                    {% if review.rating >=2 %}
                        <span class="fa fa-star checked"></span>
                    {% endif %}
                    {% if review.rating == 2.5 %}
                        <span class="fa fa-star-half checked"></span>
                    {% endif %}
                    {% if review.rating >=3 %}
                        <span class="fa fa-star checked"></span>
                    {% endif %}
                    {% if review.rating == 3.5 %}
                        <span class="fa fa-star-half checked"></span>
                    {% endif %}
                    {% if review.rating >=4 %}
                        <span class="fa fa-star checked"></span>
                    {% endif %}
                    {% if review.rating == 4.5 %}
                        <span class="fa fa-star-half checked"></span>
                    {% endif %}
                    {% if review.rating >=5 %}
                        <span class="fa fa-star checked"></span>
                    {% endif %}

                </td>
                <td>â‚¬{{ review.price }}</td>

                <td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('review_edit', {'id': review.id}) }}">edit</a>
                    {% elseif is_granted('ROLE_USER') %}
                        {% if review.username == app.user.username %}
                            <a href="{{ path('review_edit', {'id': review.id}) }}">edit</a>
                        {% endif %}
                    {% endif %}
                </td>
            </tr>
            <br>
        {% else %}
            (no reviews for this product)
        {% endfor %}

    </table>
    <a href="{{ path('product_index') }}">back to list</a>


    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
        {% include 'product/_delete_form.html.twig' with {'identifier': product.id} only %}
    {% endif %}

{% endblock %}