{% extends 'base.html.twig' %}

{% block title %}Search by price{% endblock %}

{% block body %}

    <h1>Search by price</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>price range</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for price in prices %}
            <tr>
                <td>{{ price.range }}</td>
                <td>
                    <a href="{{ path('price_show', {'id': price.id}) }}">show products</a>
                 {% if is_granted('ROLE_ADMIN') %}
                     <a href="{{ path('price_edit', {'id': price.id}) }}">edit</a>
                 {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('price_new') }}">Create new</a>
    {% endif %}

{% endblock %}